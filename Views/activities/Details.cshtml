@model CSE_DEPARTMENT.Models.activities

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Details</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <dl class="dl-horizontal">
                    <dt>
                        Student Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.student.Roll_No)
                    </dd>
                    <dt>
                        Club Membership
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.club_membership)
                    </dd>

                    <dt>
                        Club Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.club_name)
                    </dd>

                    <dt>
                        Designation
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.designation)
                    </dd>

                    <dt>
                        Achievement
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.achievement)
                    </dd>

                    <dt>
                        Others Co Curricular Activities
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.others_co_curricular_activities)
                    </dd>

                    <dt>
                        Description
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.description)
                    </dd>

                </dl>
            </table>
        </div>

    </div>

</div>

<p>
    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.activities_id }, new { @class = "btn btn-info" }) 
    }
@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
</p>
