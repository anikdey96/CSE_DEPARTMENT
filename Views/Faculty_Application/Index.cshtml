@model IEnumerable<CSE_DEPARTMENT.Models.Faculty_Application>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml"; }



<br />
<br />
<br />
<br />
<br />
<br />

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Apply For Leave</h3>

    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-condensed" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                      Designation
                    </th>
                    <th>
                        Application Title
                    </th>

                    <th>
                        Required Leave Days
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Accepted/Rejected
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NoOfLeave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Accepted_Rejected)
                </td>
                <td class="btn-group">
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.application_id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.application_id }, new { @class = "btn btn-danger" })
                    }
                </td>
            </tr>
                }

                </tbody>
            </table>

        </div>

    </div>

</div>

