@model IEnumerable<CSE_DEPARTMENT.Models.faculty_task_assign>

@{ ViewBag.Title = "Faculties Task Assign Section";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml"; }


<br />
<br />
<br />
<br />
<br />
<br />


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Faculties Task Assign Section</h3>



    </div>

    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-condensed" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Task Title
                        </th>
                        <th>
                            Task Description
                        </th>
                        <th>
                            Task Deadline
                        </th>
                        <th>
                            Task Priority
                        </th>
                        @*<th>
                            Task status
                        </th>*@
                        <th>
                            Feedback
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.teacher.teacher_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.deadline)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.priority)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.feedback)
                            </td>
                            <td class="btn-group">
                                @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin") || User.IsInRole("Faculty") || User.IsInRole("Staff")))
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = item.task_id }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.task_id }, new { @class = "btn btn-danger" })


                                }

                            </td>
                        </tr>
                    }

                </tbody>

            </table>

        </div>

    </div>

</div>

<p>

    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin") || User.IsInRole("Faculty") || User.IsInRole("Staff")))
    {
        @Html.ActionLink("Create A New Task", "Create", null, new { @class = "btn btn-success" })
    }
</p>
