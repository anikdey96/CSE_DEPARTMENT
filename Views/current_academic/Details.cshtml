@model CSE_DEPARTMENT.Models.current_academic

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Details</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <dl class="dl-horizontal">

                    <dt>
                        Session
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Session.session_name)
                    </dd>


                    <dt>
                        Year-Semester
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Year.year_name)
                    </dd>

                    <dt>
                        Admission Date
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.admission_date)
                    </dd>

                    <dt>
                        Department
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.dept)
                    </dd>

                    <dt>
                        Semester Result
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.result.cgpa)
                    </dd>


                </dl>
            </table>

        </div>

    </div>

</div>

<p>
    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
    {
@Html.ActionLink("Edit", "Edit", "null", new { id = Model.currentacademic_id }, new { @class = "btn btn-info" })
    }
 @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
</p>
