@model CSE_DEPARTMENT.Models.current_academic

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                <dl class="dl-horizontal">

                    <dt>
                        Full Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.student.Name)
                    </dd>

                    <dt>
                        Roll No
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Roll)
                    </dd>

                    <dt>
                        Session
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Session.session_name)
                    </dd>


                    <dt>
                        Year-Semester
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Year.year_name)
                    </dd>

                    <dt>
                        Admission Date
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.admission_date)
                    </dd>

                    <dt>
                        Department
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.dept)
                    </dd>



                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
                    </div>
}
            </table>

        </div>

    </div>

</div>