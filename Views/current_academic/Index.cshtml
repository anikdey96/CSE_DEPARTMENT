@model IEnumerable<CSE_DEPARTMENT.Models.current_academic>

@{ ViewBag.Title = "Current Academic Status";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml"; }


<br />
<br />
<br />
<br />
<br />
<br />


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Student's Current Academic Status</h3>



    </div>

    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-condensed" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Full Name
                        </th>
                        <th>
                            Roll No
                        </th>
                        <th>
                            Session
                        </th>
                        <th>
                            Year-Semester
                        </th>
                        <th>
                            Admission Date
                        </th>
                        <th>
                            Department
                        </th>

                        <th>
                            Actions
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.student.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Roll)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Session.session_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Year.year_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.admission_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dept)
                            </td>

                            <td class="btn-group">
                                @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
                                {
                            @Html.ActionLink("Edit", "Edit", new { id = item.currentacademic_id }, new { @class = "btn btn-primary" })}
                                @Html.ActionLink("Details", "Details", new { id = item.currentacademic_id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Preview", "Details", new { id = item.currentacademic_id }, new { @class = "btn btn-secondary" })
                                @Html.ActionLink("Download", "Details", new { id = item.currentacademic_id }, new { @class = "btn btn-success" })
                                @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
                                {
                            @Html.ActionLink("Delete", "Delete", new { id = item.currentacademic_id }, new { @class = "btn btn-danger" })}
                            </td>
                        </tr>
                    }

                </tbody>

            </table>

        </div>

    </div>

</div>

<p>

    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
    {
        @Html.ActionLink("Create A New Entry", "Create", null, new { @class = "btn btn-success" })
    }
</p>