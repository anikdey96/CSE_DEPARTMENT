@model CSE_DEPARTMENT.Models.teacher

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <dl class="dl-horizontal">
                    <dt>
                        Faculty Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.teacher_name)
                    </dd>

                    <dt>
                        Designation
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.designation)
                    </dd>

                    <dt>
                        Favorite Quote
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.favorite_quote)
                    </dd>

                    <dt>
                        Work Area
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.work_area)
                    </dd>

                    <dt>
                        Achievement
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.achievement)
                    </dd>

                    <dt>
                        Publications
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.publication)
                    </dd>

                    <dt>
                        Publication Links
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.publication_links)
                    </dd>

                    <dt>
                        Personal Website
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.website)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
            </div>
                }
            </table>

        </div>

    </div>

</div>
