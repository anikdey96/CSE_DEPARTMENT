@model CSE_DEPARTMENT.Models.Application

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <dl class="dl-horizontal">
                    <dt>
                        Year-Semester
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Year.year_name)
                    </dd>

                    <dt>
                        Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>

                    <dt>
                        Roll
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.roll)
                    </dd>

                    <dt>
                        Application Title
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.title)
                    </dd>

                    <dt>
                        Tag
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tag)
                    </dd>

                    <dt>
                        Description
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.description)
                    </dd>
                    <dt>
                        Accepted/Rejected
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Accepted_Rejected)
                    </dd>

                    <dt>
                        Comment
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.status)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
                            </div>}
            </table>

        </div>

    </div>

</div>
