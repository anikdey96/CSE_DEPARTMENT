@model CSE_DEPARTMENT.Models.RegisterViewModel
@using CSE_DEPARTMENT.Controllers
@{
    ViewBag.Title = "Register";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<br />
<br />

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3>Create A New User Account</h3>
    <hr />
    @Html.ValidationSummary("", new { @style = "color: black" })


    <div class="form-group">

        @Html.LabelFor(m => m.RoleSelected, "Select Role", new { @class = "control-label col-md-2" })
        <div class="col-md-3 input-group ">
            <div class="input-group">
                @Html.DropDownListFor(m => m.RoleSelected, (IEnumerable<SelectListItem>)ViewBag.Roles, "Select Your Desired Role ..................", new { id = "roles" })
                <span class="input-group-addon"><i class="fa fa-check-square-o" style="color:cornflowerblue"></i></span>
            </div>
        </div>
    </div>
    


    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-3 input-group ">
            <div class="input-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <span class="input-group-addon"><i class="fa fa-envelope" style="color:cornflowerblue"></i></span>
            </div>
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-3 input-group">
            <div class="input-group">

                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "txtPassword" })
                <span class="input-group-addon"><img  src="~/Images/eye-icon.png" /></span>

            </div>

            <div class="input-group">
                <input type="checkbox" id="cbShowPassword" />&nbsp;Show Password?
            </div>
        </div>
    </div>






    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-3 input-group">
            <div class="input-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "txtConfirmPassword" })
                <span class="input-group-addon"><img src="~/Images/eye-icon.png" /></span>


            </div>


            <div class="input-group">
                <input type="checkbox" id="cbShowConfirmPassword" />&nbsp;Show Password?
            </div>

            <br />
            <input type="submit" class="btn btn-primary" value="Register" /> |
            &nbsp;
            @Html.ActionLink("Go Back", "Login", "Account", null, new { @class = "btn btn-warning" })
        </div>
    </div>



}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    @*<script src="~/Scripts/Site.js"></script>*@

    <script type="text/javascript">
        $(function () {
            $("#roles").chosen();
        });
        $("#roles").each(function () {
            $(this).children().first().hide();
        });
        $("#roles").each(function () {
            $(this).children().last().hide();
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#cbShowPassword').click(function () {
                $('#txtPassword').attr('type', $(this).is(':checked') ? 'text' : 'password');

            });


        });

        $(document).ready(function () {
            $('#cbShowConfirmPassword').click(function () {
                $('#txtConfirmPassword').attr('type', $(this).is(':checked') ? 'text' : 'password');

            });


        });


    </script>
}