@model CSE_DEPARTMENT.Models.student_task_assign

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <dl class="dl-horizontal">
                    <dt>
                        Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.student.Name)
                    </dd>

                    <dt>
                        Year-Semester
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Year.year_name)
                    </dd>

                    <dt>
                        Roll
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.roll)
                    </dd>

                    <dt>
                        Task Title
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.title)
                    </dd>

                    <dt>
                        Task Description
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.description)
                    </dd>

                    <dt>
                        Task Deadline
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.deadline)
                    </dd>

                    <dt>
                        Task Priority
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.priority)
                    </dd>

                    @*<dt>
                        Status
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.status)
                    </dd>*@

                    <dt>
                        Feedback
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.feedback)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
                    </div>
}
            </table>

        </div>

    </div>

</div>
