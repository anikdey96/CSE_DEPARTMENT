@model IEnumerable<CSE_DEPARTMENT.Models.notice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">E-Notice</h3>

    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-condensed" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                           Notice
                        </th>
                        <th>
                           Notice Tags
                        </th>
                        <th>
                           Published By
                        </th>
                        <th>
                            Published Date
                        </th>
                        <th>
                            Created By
                        </th>
                        <th>
                            Created Date
                        </th>
                        <th>
                            Updated By
                        </th>
                        <th>
                            Updated Date
                        </th>
                        <th>
                            Deadline
                        </th>
                        <th>
                            Priority
                        </th>
                        <th>
                            Specification
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.notice_upload)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.notice_topic)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.published_by)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.publish_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.created_by)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.created_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.updated_by)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.updated_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.deadline)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.priority)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.specification)
                            </td>
                            <td class="btn-group">
                                @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = item.notice_id }, new { @class = "btn btn-primary" })
                                }
                                @Html.ActionLink("Details", "Details", new { id = item.notice_id }, new { @class = "btn btn-info" })
                                @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
                                {
                                    @Html.ActionLink("Delete", "Delete", new { id = item.notice_id }, new { @class = "btn btn-danger" })
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

    </div>

</div>

<p>
    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
    {
        @Html.ActionLink("Create A New Entry", "Create", null, new { @class = "btn btn-success" })
    }

</p>
