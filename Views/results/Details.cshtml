@model CSE_DEPARTMENT.Models.result

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Details</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <dl class="dl-horizontal">
                    <dt>
                        Full Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        Session
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Session.session_name)
                    </dd>



                    <dt>
                        Year
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Year.year_name)
                    </dd>

                    <dt>
                        Roll No
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Roll_No)
                    </dd>

                    <dt>
                        CGPA
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.cgpa)
                    </dd>

                </dl>
            </table>

        </div>

    </div>

</div>
<p>
    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
    {
@Html.ActionLink("Edit", "Edit", new { id = Model.result_id }, new { @class = "btn btn-info" })
    } |
@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
</p>
