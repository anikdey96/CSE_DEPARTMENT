@model CSE_DEPARTMENT.Models.Staff

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Details</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <dl class="dl-horizontal">
                    <dt>
                        Full Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.staff_name)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.Photo)
                    </dt>

                    <dd>
                        @{ string imagepath = Model.Photo;
                <img src="@Url.Content(imagepath)" alt="Image" style="width:100px;height:150px;max-width:100%;height:auto" /> }
                    </dd>

                    <dt>
                        Designation

                    <dd>
                        @Html.DisplayFor(model => model.designation)
                    </dd>

                </dl>
            </table>
        </div>

    </div>

</div>

<p>
    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
    {
@Html.ActionLink("Edit", "Edit", new { id = Model.staff_id }, new { @class = "btn btn-info" }) 
    } |
@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
</p>
