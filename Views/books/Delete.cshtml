@model CSE_DEPARTMENT.Models.book

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <dl class="dl-horizontal">
                    <dt>
                        Subject Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Subject.Subject_Name)
                    </dd>

                    <dt>
                        Year Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Year.year_name)
                    </dd>

                    <dt>
                        Book Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.book_name)
                    </dd>

                    <dt>
                        Book Author
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.book_author)
                    </dd>

                    <dt>
                        Specification
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.specification)
                    </dd>

                    <dt>
                        Edition
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.edition)
                    </dd>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()


                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
                    </div>
                }
            </table>

        </div>

    </div>

</div>
