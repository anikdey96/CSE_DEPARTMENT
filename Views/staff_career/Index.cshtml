@model IEnumerable<CSE_DEPARTMENT.Models.staff_career>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Staff Career Information</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-condensed" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Full Name
                        </th>
                        <th>
                            Joining Date
                        </th>
                        <th>
                            Diploma Result
                        </th>
                        <th>
                            Diploma Institute
                        </th>
                        <th>
                            HSC Result
                        </th>
                        <th>
                            HSC Institute
                        </th>
                        <th>
                            SSC Result
                        </th>
                        <th>
                            SSC Institute
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Staff.staff_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.joining_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.diploma_result)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.diploma_institute)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hsc_result)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hsc_institute)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ssc_result)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ssc_institute)
                            </td>
                            <td class="btn-group">
                                @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
                                {
                            @Html.ActionLink("Edit", "Edit", new { id = item.staffcareer_id }, new { @class = "btn btn-primary" })}
                                @Html.ActionLink("Details", "Details", new { id = item.staffcareer_id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Preview", "Details", new { id = item.staffcareer_id }, new { @class = "btn btn-secondary" })
                                @Html.ActionLink("Download", "Details", new { id = item.staffcareer_id }, new { @class = "btn btn-success" })
                                @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
                                {
                            @Html.ActionLink("Delete", "Delete", new { id = item.staffcareer_id }, new { @class = "btn btn-danger" })}
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>

    </div>

</div>
<p>
    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
    {
@Html.ActionLink("Create A New Entry", "Create", null, new { @class = "btn btn-success" })
    }

</p>