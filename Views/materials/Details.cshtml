@model CSE_DEPARTMENT.Models.materials

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Details</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                <dl class="dl-horizontal">
                    <dt>
                        Subject Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Subject.Subject_Name)
                    </dd>

                    <dt>
                        Year
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Year.year_name)
                    </dd>

                    <dt>
                        Materials Topic
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.materials_topic)
                    </dd>

                    <dt>
                        Arranged By
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.arranged_by)
                    </dd>

                    <dt>
                        Reference
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.reference)
                    </dd>

                    <dt>
                        Publish Date
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.publish_date)
                    </dd>

                    <dt>
                        Specification
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.specification)
                    </dd>

                </dl>
            </table>
        </div>

    </div>
</div>
<p>
    @if (User.Identity.IsAuthenticated && (User.IsInRole("SuperAdmin")))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.materials_id }, new { @class = "btn btn-info" })
    }
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
    </p>
